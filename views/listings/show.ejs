<% layout("/layouts/boilerplate") %>

    <div class="row">
        <div class="col-8 offset-3">
            <h3 class="mt-4 mb-4">
                <%= listing.title %>
            </h3>
        </div>

        <div class="card col-6 offset-3 show-card">
            <img src="<%= listing.image %>" class="card-img-top show-img" alt="listings_image">
            <div class="card-body">
                <p class="card-text">
                    <%= listing.description %> <br>
                        &#8377;<%= listing.price.toLocaleString("en-IN") %> <br>
                            <%= listing.location %> <br>
                                <%= listing.country %>
                </p>
            </div>
        </div>
        <br>

        <div class="btns mb-4">
            <a href="/listings/<%= listing._id %>/edit" class="btn btn-dark col-1 offset-3 edit-btn ">Edit</a>
            <form action="/listings/<%= listing._id %>?_method=DELETE" method="POST">
                <button class="btn btn-dark offset-5 edit-btn">Delete</button>
            </form>
        </div>

        <div class="col-8 offset-3 mb-4">
            <br>
            <hr>
            <h4>Leave a Review</h4>
            <form action="/listings/<%= listing._id %>/reviews" method="POST" novalidate class="needs-validation">
                <div class="mb-3 mt-3">
                    <label for="rating" class="form-label">Rating</label>
                    <input type="range" min="1" max="5" id="rating" name="review[rating]" class="form-range">
                </div>
                <div class="mb-3 mt-3">
                    <label for="comment" class="form-label">Comment</label>
                    <textarea name="review[comment]" id="comment" cols="30" rows="4" class="form-control"
                        placeholder="Typing here..." required></textarea>
                    <div class="invalid-feedback">Please ADD Review.</div>
                </div>
                <button type="submit" class="btn btn-outline-dark">Submet</button>
            </form>
            <br>
            <hr>

            <h4>All Reviews</h4>
            <ul>
                <% for(review of listing.reviews){ %>
                    <li>
                        <%= review.comment%> -
                            <%=review.rating %> stars
                    </li>
                    <% } %>
            </ul>
        </div>

    </div>