<% layout("/layouts/boilerplate.ejs") %>

    <div class="tax-toggle mt-4">
        <div class="form-check-reverse form-switch">
            <input class="form-check-input" type="checkbox" id="flexSwitchCheckDefault">
            <label class="form-check-label" for="flexSwitchCheckDefault">Display total after Taxes</label>
        </div>
    </div>



    <div id="filters" class="row">

        <div class="col-xs-6 col-6 col-sm-3 col-lg-1">
            <div class="filter text-center">
                <div><i class="fa-solid fa-fire"></i></div>
                <h6>Trending</h6>
            </div>
        </div>
        <div class="col-xs-6 col-6 col-sm-3 col-lg-1">
            <div class="filter text-center">
                <div><i class="fa-solid fa-bed"></i></div>
                <h6>Rooms</h6>
            </div>
        </div>
        <div class="col-xs-6 col-6 col-sm-3 col-lg-1">
            <div class="filter text-center">
                <div><i class="fa-solid fa-mountain-city"></i></div>
                <h6>Iconic Cities</h6>
            </div>
        </div>
        <div class="col-xs-6 col-6 col-sm-3 col-lg-1">
            <div class="filter text-center">
                <div><i class="fa-solid fa-mountain"></i></div>
                <h6>Mountains</h6>
            </div>
        </div>
        <div class="col-xs-6 col-6 col-sm-3 col-lg-1">
            <div class="filter text-center">
                <div><i class="fa-brands fa-fort-awesome"></i></div>
                <h6>Castles</h6>
            </div>
        </div>
        <div class="col-xs-6 col-6 col-sm-3 col-lg-1">
            <div class="filter text-center">
                <div><i class="fa-solid fa-person-swimming"></i></div>
                <h6>Amazing Pools</h6>
            </div>
        </div>
        <div class="col-xs-6 col-6 col-sm-3 col-lg-1">
            <div class="filter text-center">
                <div><i class="fa-solid fa-campground"></i></div>
                <h6>Camping</h6>
            </div>
        </div>
        <div class="col-xs-6 col-6 col-sm-3 col-lg-1">
            <div class="filter text-center">
                <div><i class="fa-solid fa-cow"></i></div>
                <h6>Farms</h6>
            </div>
        </div>
        <div class="col-xs-6 col-6 col-sm-3 col-lg-1">
            <div class="filter text-center">
                <div><i class="fa-solid fa-person-skiing"></i></div>
                <h6>Arctic</h6>
            </div>
        </div>
        <div class="col-xs-6 col-6 col-lg-1 col-sm-3">
            <div class="filter text-center">
                <div><i class="fa-brands fa-bluesky"></i></div>
                <h6>Luxe</h6>
            </div>
        </div>
        <div class="col-xs-6 col-6 col-sm-3 col-lg-1">
            <div class="filter text-center">
                <div><i class="fa-solid fa-sailboat"></i></div>
                <h6>Boats</h6>
            </div>
        </div>
        <div class="col-xs-6 col-6 col-sm-3 col-lg-1">
            <div class="filter text-center">
                <div><i class="fa-solid fa-mug-hot"></i></div>
                <h6>Bed & breakfasts</h6>
            </div>
        </div>

    </div>


    <div class="row row-cols-lg-3 row-cols-md-2 row-cols-sm-1 mt-4">
        <% for(let listing of allListings ){ %>
            <a href="/listings/<%= listing._id %>" class="listing-link">
                <div class="card listing-card">
                    <img style="height: 20rem;" src="<%= listing.image.url %>" class="card-img-top" alt="listing_image">
                    <div class="card-img-overlay"></div>
                    <div class="card-body">
                        <p class="card-text">
                            <b>
                                <%= listing.title %>
                            </b> <br>
                            &#8377; <%= listing.price.toLocaleString("en-IN") %> /night
                                <i class="tax-info"> &nbsp; &nbsp;+18% GST</i>
                        </p>
                    </div>
                </div>
            </a>
            <% } %>
    </div>
